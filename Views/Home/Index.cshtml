@model List<UserApp.Models.VM.VMRegister>
@{
    ViewBag.Title = "Index";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>Users</h2>
        @Html.ActionLink("Register User", "Register", "Account", null, new { @class = "btn btn-outline-primary float-end" })

        <table class="mt-3 table ">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Email</th>
                    <th scope="col">CreateOn</th>
                    <th scope="col">LastLoggedOn</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model != null && Model.Count > 0)
                    {
                        int i = 0;
                        foreach (var user in Model)
                        {
                            i++;
                            <tr>
                                <th scope="row">@i</th>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.CreatedOn</td>
                                <td>@user.LastLoggedOn</td>
                                <td>@Html.ActionLink("Update", "Register", "Account", null, new { @class = "btn btn-outline-primary float-end" }) @Html.ActionLink("Delete", "Register", "Account", null, new { @class = "btn btn-outline-danger float-end" })</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="Colspan-4"> No record Found</td>
                        </tr>
                    }

                }

            </tbody>
        </table>

    </div>
</div>


